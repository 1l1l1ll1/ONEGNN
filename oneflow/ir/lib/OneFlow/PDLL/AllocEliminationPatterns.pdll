#include "OneFlow/OneFlowOps.td"

Constraint IsFuncArguments(value: Value) [{
  return success(nullptr != llvm::dyn_cast<mlir::BlockArgument>(value));
}];

Pattern {
  let alloc = op<memref.alloc>();
  let copy = op<memref.copy>(alloc.0, arg: Value);

  IsFuncArguments(arg);

  rewrite alloc with {
    erase copy;
    replace alloc with arg;
  };
}
